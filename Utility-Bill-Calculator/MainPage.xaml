<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Utility_Bill_Calculator.MainPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             >

    <StackLayout>
        <Label Text="Utitlity Bill Calculator" FontSize="Title" HorizontalTextAlignment="Center"/>

        <Label Text="Choose Your Province" FontSize="Caption" />
        <Label Text="Daytime usage (kwh)" FontSize="Caption" />
        <Label Text="Evening usage (kwh)" FontSize="Caption" />
        
        <!--Caption and Switch for Renewable enery source-->
        <FlexLayout Direction="Row" JustifyContent="SpaceBetween">
        <Label Text="Did you use a renewable energy source?" FontSize="Caption" />
            <Switch IsToggled="False"/>
        </FlexLayout>
        
        <!--Flex layout for buttons-->
        <FlexLayout Direction="Row" JustifyContent="SpaceAround" AlignContent="Center">
            <Button Text="Calculate"/>
            <Button Text="Reset"/>
        </FlexLayout>
        
    </StackLayout>

</ContentPage>
